{
  "pdsi": {
    "source": "TerraClimate",
    "source_link": "https://www.climatologylab.org/terraclimate.html",  
    "description": "Palmer Drought Severity Index",
    "coverage": {
      "description": "Global",
      "bounding_box": {
        "min_longitude": -180,
        "min_latitude": -90,
        "max_longitude": 180,
        "max_latitude": 90
      }
    },
    "period": {
      "start_year": 1958,
      "end_year": 2022
    },
    "coordinate_system": "EPSG:4326",
    "spatial_resolution": "4km",
    "temporal_resolution": "monthly",
    "file_structure": {
      "frequency": "annual",
