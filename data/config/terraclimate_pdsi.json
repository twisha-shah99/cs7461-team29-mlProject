      "naming_convention": "TerraClimate_PDSI_yyyy.nc"
    },
    "format": "NetCDF",
    "NetCDF": {
      "standard_name": "palmer_drought_severity_index",
      "packed": "yes",
      "scale_factor": 0.01,
      "offset": -45.0
    },
    "units": "unitless",
    "missing_value": -32768,
    "cdm_data_type": "GRID",
    "s3_bucket_base": "s3://wbgdecinternal-ntl/climate/data/terraclimate/pdsi",
    "notes": "This datasets downloaded from TerraClimate website",
    "references": "https://doi.org/10.1038/sdata.2017.191"
  }
}